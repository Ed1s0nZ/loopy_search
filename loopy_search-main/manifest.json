{
  "manifest_version": 3,
  "name": "AI划词搜索",
  "version": "1.0",
  "description": "选中文本，使用AI解释内容",
  "permissions": [
    "storage",
    "contextMenus",
    "alarms",
    "scripting",
    "clipboardWrite",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["marked.min.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "search_with_ai": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Alt+A"
      },
      "description": "使用AI解释选中的文本"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "marked.min.js",
        "content.css",
        "popup.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
} 